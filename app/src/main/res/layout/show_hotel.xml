<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:orientation="vertical">

        <TextView
            android:id="@+id/lbl_hotel_name"
            android:layout_width="match_parent"
            android:layout_height="49dp"
            android:textSize="24sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/lbl_hotel_title_prix"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Prix de la nuitÃ©e"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/lbl_hotel_prix"
            android:layout_width="match_parent"
            android:layout_height="39dp"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/lbl_hotel_title_adr"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Adresse"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/lbl_hotel_ville_cp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="italic" />

        <TextView
            android:id="@+id/lbl_hotel_adr"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="italic" />

        <TextView
            android:id="@+id/lbl_hotel_comp"
            android:layout_width="match_parent"
            android:layout_height="29dp"
            android:textStyle="italic" />

        <TextView
            android:id="@+id/lbl_hotel_title_desc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Description"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/lbl_hotel_desclong"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="viewStart"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/lbl_hotel_title_equips"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Equipements"
            android:textSize="18sp"
            android:textStyle="bold" />

        <ListView
            android:id="@+id/lst_equips"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </LinearLayout>
</RelativeLayout>